<h1>Listing restaurants</h1>

<%= form_tag restaurants_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= text_field_tag :addy, params[:addy] %>
    Do you need to be outside?:
    <%= check_box_tag :patio, params[:patio] %><br />
    Cost:
    <%= select_tag(:cost, options_for_select([['$', 1], ['$$', 2], ['$$$',3], ['$$$$',4]])) %>
    Date:
    <%= check_box_tag :date, params[:date] %><br />
    Buckhead: <%= check_box_tag :buckhead, params[:buckhead] %>
    Midtown: <%= check_box_tag :midtown, params[:midtown] %>
    Decatur: <%= check_box_tag :decatur, params[:decatur] %>
    VA Highlands: <%= check_box_tag :vahighlands, params[:vahighlands] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Hood</th>
    <th>Date</th>
    <th>Patio</th>
    <th>Cost</th>
    <th>Ambiguous</th>
    <th>Addy</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.hood %></td>
    <td><%= restaurant.date %></td>
    <td><%= restaurant.patio %></td>
    <td><%= restaurant.cost %></td>
    <td><%= restaurant.ambiguous %></td>
    <td><%= restaurant.addy %></td>
    <td><%= link_to 'Show', restaurant %></td>
    <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
    <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Restaurant', new_restaurant_path %>