<h1>Listing restaurants</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Hood</th>
    <th>Date</th>
    <th>Patio</th>
    <th>Cost</th>
    <th>Ambiguous</th>
    <th>Addy</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.hood %></td>
    <td><%= restaurant.date %></td>
    <td><%= restaurant.patio %></td>
    <td><%= restaurant.cost %></td>
    <td><%= restaurant.ambiguous %></td>
    <td><%= restaurant.addy %></td>
    <td><%= link_to 'Show', restaurant %></td>
    <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
    <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

